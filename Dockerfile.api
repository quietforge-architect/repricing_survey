# Dockerfile for the Python API service
FROM python:3.12-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY agents/logic/sqlite-service/ ./agents/logic/sqlite-service/
COPY db/ ./db/
COPY tools/ ./tools/

RUN mkdir -p db

EXPOSE 3001

CMD ["python", "agents/logic/sqlite-service/index.py"]